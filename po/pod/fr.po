#: ../../lib/Locale/Po4a/TransTractor.pm:110
msgid ""
"The following example parse a list paragraphs begining with \"<p>\". For "
"sake of simplicity, we assume that the document is well formatted, ie that "
"'<p>' tags are the only tags present, and that this tag is at the very "
"begining of each paragraph."
msgstr ""

#: ../../lib/Locale/Po4a/TransTractor.pm:115
#, no-wrap
msgid ""
" sub parse {\n"
"   PARAGRAPH: while (1) {\n"
"       $my ($paragraph,$pararef,$line,$lref)=(\"\",\"\",\"\",\"\");\n"
"       $my $first=1;\n"
"       while (($line,$lref)=$document->shiftline() && defined($line)) {\n"
"\t   ($line,$lref)=$document->shiftline();\n"
"\t   if ($line =~ m/<p>/ && !$first--; ) {\n"
"\t       # Not the first time we see <p>. \n"
"\t       # Reput the current line in input,\n"
"\t       #  and put the builded paragraph to output\n"
"\t       $document->unshiftline($line,$lref);\n"
"\t      \n"
msgstr ""

#: ../../lib/Locale/Po4a/TransTractor.pm:127
#, no-wrap
msgid ""
"\t       # Now that the document is formed, translate it:\n"
"\t       #   - Remove the leading tag\n"
"\t       $paragraph =~ s/^<p>//s;\n"
"\n"
msgstr ""

#: ../../lib/Locale/Po4a/TransTractor.pm:131
#, no-wrap
msgid ""
"\t       #   - push to output the leading tag (untranslated) and the\n"
"\t       #     rest of the paragraph (translated)\n"
"\t       $document->pushline(  \"<p>\"\n"
"                                   . $document->translate($paragraph,$pararef)\n"
"                                   );\n"
"\n"
msgstr ""

#: ../../lib/Locale/Po4a/TransTractor.pm:137
#, no-wrap
msgid ""
" \t       next PARAGRAPH;\n"
"\t   } else {\n"
"\t       # Append to the paragraph\n"
"\t       $paragraph .= $line;\n"
"\t       $pararef = $lref unless(length($pararef));\n"
"\t   }\n"
"       }\n"
"       # Did not got a defined line? End of input file.\n"
"       return;\n"
"   }\n"
" } \n"
"\n"
msgstr ""

